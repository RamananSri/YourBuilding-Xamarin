<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="KundePortal.View.ProMenuView"
    NavigationPage.HasBackButton="False"
    xmlns:viewmodel="clr-namespace:KundePortal.ViewModel">

<!--    Viewmodel instance-->
    <ContentPage.BindingContext>
        <viewmodel:ProMenuViewModel></viewmodel:ProMenuViewModel>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Konto" Command="{Binding viewUserCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid ColumnSpacing="5">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackLayout Margin="40">
                <Image Source="message.png" VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding MessageViewCommand}" 
                            CommandParameter="{Binding Source={x:Reference img1}, Path=Text}"  
                            NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label x:Name="img1" Text="Beskeder" HorizontalOptions="Center"></Label>
            </StackLayout>

<!--            <StackLayout Grid.Row="0" Grid.Column="1" Margin="40">
                <Image Source="search.png" VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding SearchViewCommand}"
                            CommandParameter="{Binding Source={x:Reference img2}, Path=Text}"  
                            NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label x:Name="img2" Text="Søg" HorizontalOptions="Center"></Label>
            </StackLayout>-->

            <StackLayout Grid.Row="1" Grid.Column="0" Margin="40">
                <Image Source="globe.png" VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding GPSViewCommand}"
                            CommandParameter="{Binding Source={x:Reference img3}, Path=Text}"  
                            NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label x:Name="img3" Text="I nærheden" HorizontalOptions="Center"></Label>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="1" Margin="40">
                <Image Source="plusminus.png" VerticalOptions="FillAndExpand" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding CategoriesViewCommand}"
                            CommandParameter="{Binding Source={x:Reference img4}, Path=Text}"  
                            NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label x:Name="img4" Text="Kategorier" HorizontalOptions="Center"></Label>
            </StackLayout>
            


        

                    
          
        </Grid>
	</ContentPage.Content>
</ContentPage>
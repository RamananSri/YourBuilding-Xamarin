<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KundePortal.UserPages.QuestionPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="CreateQuestion" Text="Opret" Activated="CreateQuestion_clicked"/>
    </ContentPage.ToolbarItems>

    <ListView x:Name="questionList" ItemSelected="Question_selected" HasUnevenRows="true">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <!--Task cell-->
                    <StackLayout Orientation="Horizontal" Padding="10,5,10,5" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding title}" FontSize="Medium"/>
                            <Label Text="{Binding subCategory}" TextColor="Gray" FontSize="Small"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding likeCounter}" FontSize="Large"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
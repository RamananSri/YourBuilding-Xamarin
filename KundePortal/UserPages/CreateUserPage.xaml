<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Opret bruger" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KundePortal.UserPages.CreateUserPage">

    <StackLayout>
    <TableView>
        <TableView.Root>
            <TableSection Title="Opret ny bruger">
                <EntryCell x:Name="nameEntry" Label="Navn:" Placeholder="Indtast navn..." Keyboard="Text"></EntryCell>
                <EntryCell x:Name="emailEntry" Label="Email:" Placeholder="Indtast email..." Keyboard="Email"></EntryCell>
                <EntryCell x:Name="phoneEntry" Label="Telefon:" Placeholder="Indtast telefon..." Keyboard="Telephone"></EntryCell>
                <EntryCell x:Name="addressEntry" Label="Adresse:" Placeholder="Indtast adresse..." Keyboard="Text"></EntryCell>
                <EntryCell x:Name="passwordEntry" Label="Password:" Placeholder="Indtast password..." Keyboard="Text"></EntryCell>
            </TableSection>
            <TableSection>
                <SwitchCell Text="Erhverv" On="False" x:Name="erhvervSwitch"></SwitchCell>
            </TableSection>
            </TableView.Root>
    </TableView>

        <TableView Margin="0, 20, 0 ,0" BindingContext="{x:Reference erhvervSwitch}" IsVisible="{Binding On}">
        <TableView.Root>
            
            <TableSection Title="CVR">
                <EntryCell Placeholder="Indtast cvr..."></EntryCell>
            </TableSection>
            
            </TableView.Root>
    </TableView>




